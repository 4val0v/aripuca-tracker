<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:background="@drawable/bg1repeat" android:id="@+id/compassView">

	<!-- Compass layout -->

	<LinearLayout style="@style/FillParent" android:paddingBottom="25dp"
		android:orientation="vertical" android:gravity="center">
		<ImageView android:src="@drawable/compass" android:id="@+id/compass" android:contentDescription="@string/compass"
			android:layout_width="300dip" android:layout_height="300dip" />
	</LinearLayout>

	<LinearLayout style="@style/FillParent" android:paddingBottom="25dp"
		android:orientation="vertical" android:gravity="center">
		<com.aripuca.tracker.view.CompassImage
			android:id="@+id/compassImage2" android:src="@drawable/compass_arrow"
			android:layout_width="300dip" android:layout_height="300dip"
			android:visibility="invisible" />
	</LinearLayout>

	<LinearLayout style="@style/FillParent" android:paddingBottom="25dp"
		android:orientation="vertical" android:gravity="center">
		<com.aripuca.tracker.view.CompassImage
			android:id="@+id/compassImage" android:src="@drawable/compass_arrow"
			android:layout_width="300dp" android:layout_height="300dp" />
	</LinearLayout>

	<LinearLayout style="@style/FillParent" android:gravity="center|bottom">

		<TextView android:id="@+id/azimuth" style="@style/WrapContent.Text.Text30"
			android:text="@string/default_azimuth">
		</TextView>

	</LinearLayout>

</FrameLayout>