<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:background="@drawable/bg1repeat">

	<ScrollView android:layout_width="fill_parent" android:id="@+id/dynamicView"
		android:layout_height="fill_parent" android:scrollbars="none"
		android:layout_marginBottom="52dp" android:paddingTop="2dp">

		<!-- This scroll view will be dynamically populated by the required layout 
			in runtime -->

	</ScrollView>

	<!-- CONTROL BUTTONS -->

	<LinearLayout android:id="@+id/buttonControls"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="bottom" android:orientation="horizontal" android:baselineAligned="false">

		<Button android:id="@+id/addWaypointButton" android:text="@string/waypoint"
			style="@style/ControlButton">
		</Button>

		<Button android:id="@+id/trackRecordingButton" android:text="@string/record"
			style="@style/ControlButton">
		</Button>

		<Button android:id="@+id/pauseResumeTrackButton" android:text="@string/pause"
			style="@style/ControlButton">
		</Button>

	</LinearLayout>
	
	<LinearLayout android:id="@+id/messageBox" style="@style/FillParent"
		android:gravity="center">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="100dp" android:background="@drawable/border2"
			android:layout_margin="20dp" android:padding="5dp" >

			<TextView style="@style/FillParent" android:textSize="16sp" android:text="@string/waiting_for_fix2"
				android:textColor="#F000" android:id="@+id/messageText" android:gravity="center">
			</TextView>

		</LinearLayout>

	</LinearLayout>
	

</FrameLayout>