<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="3dp"
	android:id="@+id/filename_dialog_layout_root"
	>

	<TextView android:text="@string/file" android:layout_width="fill_parent"
		android:layout_height="wrap_content"></TextView>
		
	<EditText android:id="@+id/filenameInputText"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:maxLines="1" android:maxLength="50" android:hint="enter file name" />

</LinearLayout>

