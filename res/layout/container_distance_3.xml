<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout style="@style/TrackDetailsRow">

		<LinearLayout style="@style/TrackDetailsCell">

			<TextView android:text="@string/distance" style="@style/SmallHeader"></TextView>

			<LinearLayout style="@style/TrackDetailsRow_Value">

				<TextView android:id="@+id/distance" style="@style/Label13"
					android:gravity="right">
				</TextView>

				<TextView android:id="@+id/distanceUnit" android:gravity="left"
					style="@style/LabelUnit">
				</TextView>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout style="@style/TrackDetailsCell">

			<TextView android:text="@string/points" style="@style/SmallHeader"></TextView>

			<LinearLayout style="@style/TrackDetailsRow_Value">
				<TextView android:id="@+id/pointsCount" style="@style/Label13">
				</TextView>
			</LinearLayout>

		</LinearLayout>

		<LinearLayout style="@style/TrackDetailsCell">

			<TextView android:text="@string/segments" style="@style/SmallHeader"></TextView>

			<LinearLayout style="@style/TrackDetailsRow_Value">
				<TextView android:id="@+id/segmentsCount" style="@style/Label13">
				</TextView>
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>