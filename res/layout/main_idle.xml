<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">

	<LinearLayout android:id="@+id/mainLayout"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<!-- COORDINATES -->

		<LinearLayout style="@style/TrackDetailsRow">

			<LinearLayout style="@style/TrackDetailsLeftCell"
				android:background="@drawable/border1">

				<TextView android:text="@string/lat" style="@style/SmallHeader"></TextView>

				<TextView android:id="@+id/lat" style="@style/SmallLabel">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/TrackDetailsRightCell"
				android:background="@drawable/border1">

				<TextView android:text="@string/lng" style="@style/SmallHeader"></TextView>

				<TextView android:id="@+id/lng" style="@style/SmallLabel">
				</TextView>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout style="@style/TrackDetailsRow">

			<LinearLayout style="@style/TrackDetailsLeftCell"
				android:background="@drawable/border1">

				<TextView android:text="@string/last_fix" style="@style/SmallHeader"></TextView>

				<TextView android:id="@+id/lastFix" style="@style/SmallLabel">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/TrackDetailsRightCell"
				android:background="@drawable/border1">

				<TextView android:text="@string/accuracy" style="@style/SmallHeader"></TextView>

				<TextView android:id="@+id/accuracy" style="@style/SmallLabel">
				</TextView>

			</LinearLayout>

		</LinearLayout>

		<!-- SPEED & PACE -->

		<LinearLayout style="@style/TrackDetailsRow">

			<LinearLayout style="@style/TrackDetailsLeftCell"
				android:background="@drawable/border1">

				<TextView android:text="@string/speed" style="@style/SmallHeader"></TextView>

				<TextView android:id="@+id/speed" style="@style/SmallLabel">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/TrackDetailsRightCell"
				android:background="@drawable/border1">

				<TextView android:text="@string/pace" style="@style/SmallHeader"></TextView>

				<TextView android:id="@+id/pace" style="@style/SmallLabel">
				</TextView>

			</LinearLayout>

		</LinearLayout>

		<!-- ELEVATION & COMPASS -->

		<LinearLayout style="@style/TrackDetailsRow">

			<LinearLayout style="@style/TrackDetailsLeftCell"
				android:background="@drawable/border1">

				<TextView android:text="@string/elevation" style="@style/SmallHeader"></TextView>

				<TextView android:id="@+id/elevation" style="@style/SmallLabel">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/TrackDetailsRightCell"
				android:background="@drawable/border1">

				<TextView android:text="@string/azimuth" style="@style/SmallHeader"></TextView>

				<TextView android:id="@+id/azimuth" style="@style/SmallLabel">
				</TextView>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
	
	<!-- Compass layout -->

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:gravity="center" android:paddingTop="208dp">
			<ImageView
				 android:src="@drawable/circle420" android:id="@+id/circleImage"
				android:layout_width="220dip" android:layout_height="220dip" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:gravity="center" android:paddingTop="208dp">
			<com.aripuca.tracker.view.CompassImage
				android:id="@+id/compassImage" android:src="@drawable/windrose420"
				android:layout_width="220dip" android:layout_height="220dip" />
	</LinearLayout>

</FrameLayout>
