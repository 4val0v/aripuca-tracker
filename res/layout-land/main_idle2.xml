<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">

	<LinearLayout android:id="@+id/mainLayout"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:padding="3dp">

		<!-- SPEED & PACE -->

		<LinearLayout style="@style/LayoutRow">

			<TextView android:text="@string/speed" style="@style/LayoutRowLabel"></TextView>

			<TextView android:text="@string/pace" style="@style/LayoutRowLabel"></TextView>

		</LinearLayout>

		<LinearLayout style="@style/LayoutRow">

			<LinearLayout style="@style/LayoutRowColumn">

				<TextView android:id="@+id/speed" style="@style/LayoutRowValue">
				</TextView>

				<TextView android:id="@+id/speedUnit" style="@style/LayoutRowValueUnit">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/LayoutRowColumn">

				<TextView android:id="@+id/pace" style="@style/LayoutRowValue"
					android:text="00:00">
				</TextView>

			</LinearLayout>

		</LinearLayout>

		<!-- ELEVATION & COMPASS -->

		<LinearLayout style="@style/LayoutRow">

			<TextView android:text="@string/elevation" style="@style/LayoutRowLabel"></TextView>

			<TextView android:text="@string/azimuth" style="@style/LayoutRowLabel"></TextView>

		</LinearLayout>

		<LinearLayout style="@style/LayoutRow"
			android:layout_height="45dp">

			<LinearLayout style="@style/LayoutRowColumn"
				android:layout_height="fill_parent">

				<TextView android:id="@+id/elevation" style="@style/LayoutRowValue">
				</TextView>

				<TextView android:id="@+id/elevationUnit" style="@style/LayoutRowValueUnit">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/LayoutRowColumn"
				android:layout_height="fill_parent">

				<FrameLayout style="@style/FillParent">
					<TextView android:id="@+id/azimuth" style="@style/LayoutRowValue"
						android:text="360Â°N" android:layout_gravity="center"
						android:textSize="20dp">
					</TextView>
					<com.aripuca.tracker.view.CompassImage
						android:id="@+id/compassImage" android:src="@drawable/arrow36"
						android:layout_margin="5dp" android:layout_width="20dp"
						android:layout_height="20dp" android:layout_gravity="right"/>
				</FrameLayout>

			</LinearLayout>

		</LinearLayout>

		<!-- COORDINATES -->

		<LinearLayout style="@style/LayoutRow">

			<TextView android:text="@string/lat" style="@style/LayoutRowLabel"></TextView>

			<TextView android:text="@string/lng" style="@style/LayoutRowLabel"></TextView>

		</LinearLayout>

		<LinearLayout style="@style/LayoutRow">

			<LinearLayout style="@style/LayoutRowColumn">

				<TextView android:id="@+id/lat" style="@style/LayoutRowValueSmall">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/LayoutRowColumn">

				<TextView android:id="@+id/lng" style="@style/LayoutRowValueSmall">
				</TextView>

			</LinearLayout>

		</LinearLayout>

		<!-- LAST FIX TIME & ACCURACY -->

		<LinearLayout style="@style/LayoutRow">

			<TextView android:text="@string/accuracy" style="@style/LayoutRowLabel"></TextView>

			<TextView android:text="@string/last_fix" style="@style/LayoutRowLabel"></TextView>

		</LinearLayout>

		<LinearLayout style="@style/LayoutRow">

			<LinearLayout style="@style/LayoutRowColumn">

				<TextView android:id="@+id/accuracy" style="@style/LayoutRowValueSmall">
				</TextView>

				<TextView android:id="@+id/accuracyUnit" style="@style/LayoutRowValueUnit">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/LayoutRowColumn">

				<TextView android:id="@+id/lastFix" style="@style/LayoutRowValueSmall">
				</TextView>

			</LinearLayout>

		</LinearLayout>

		<!-- SUNRISE/SUNSET -->

		<LinearLayout style="@style/LayoutRow">

			<TextView android:text="@string/sunrise" style="@style/LayoutRowLabel"></TextView>

			<TextView android:text="@string/sunset" style="@style/LayoutRowLabel"></TextView>

		</LinearLayout>

		<LinearLayout style="@style/LayoutRow">

			<LinearLayout style="@style/LayoutRowColumn">

				<TextView android:id="@+id/sunrise" style="@style/LayoutRowValueSmall">
				</TextView>

			</LinearLayout>

			<LinearLayout style="@style/LayoutRowColumn">

				<TextView android:id="@+id/sunset" style="@style/LayoutRowValueSmall">
				</TextView>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</FrameLayout>
