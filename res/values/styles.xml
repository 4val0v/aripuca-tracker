<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="SeparatorLine">
		<item name="android:layout_height">2dip</item>
		<item name="android:background">#333</item>
	</style>

	<!-- BUTTONS -->

	<style name="ControlButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">46dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@drawable/button_1</item>
	</style>

	<style name="ControlButton_land">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">35dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@drawable/button_1</item>
	</style>

	<!-- TRACK DETAILS LAYOUT STYLES -->

	<style name="TrackDetailsRow">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">1dp</item>
		<item name="android:layout_marginBottom">1dp</item>
	</style>

	<style name="TrackDetailsRow_ValueUnits">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">#A222</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="TrackDetailsRowOfRows">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">1dp</item>
		<item name="android:layout_marginBottom">1dp</item>
	</style>

	<style name="TrackDetailsCell">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="TrackDetailsLeftCell" parent="@style/TrackDetailsCell">
		<item name="android:layout_marginRight">1dp</item>
	</style>

	<style name="TrackDetailsRightCell" parent="@style/TrackDetailsCell">
		<item name="android:layout_marginLeft">1dp</item>
	</style>

	<!-- LABELS -->

	<style name="AppLabel">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_margin">1dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- Small label for measurement units -->
	<style name="LabelUnit">
		<item name="android:textSize">13sp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_margin">1dp</item>
	</style>

	<style name="Label13" parent="@style/AppLabel">
		<item name="android:textSize">13sp</item>
	</style>

	<style name="Label17" parent="@style/AppLabel">
		<item name="android:textSize">17sp</item>
	</style>

	<style name="Label20" parent="@style/AppLabel">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="Label30" parent="@style/AppLabel">
		<item name="android:textSize">30sp</item>
	</style>

	<style name="Label40" parent="@style/AppLabel">
		<item name="android:textSize">40sp</item>
	</style>

	<style name="Label50" parent="@style/AppLabel">
		<item name="android:textSize">50sp</item>
	</style>

	<!-- HEADERS -->

	<style name="SmallHeader" parent="@style/AppLabel">
		<item name="android:textSize">13sp</item>
		<item name="android:background">#0000</item>
	</style>

	<style name="SmallHeader1" parent="@style/AppLabel">
		<item name="android:textSize">16sp</item>
		<item name="android:background">#0000</item>
	</style>
	
	
	
	
	

</resources>