<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="SeparatorLine">
		<item name="android:layout_height">2dip</item>
		<item name="android:background">#333</item>
	</style>

	<!-- HELPER PARENT STYLES -->

	<style name="FillParent">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<style name="FillWidth">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="WrapContent">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<!-- BUTTONS -->

	<style name="ControlButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">42dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@drawable/button_1</item>
	</style>

	<style name="ControlButton_land">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">35dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@drawable/button_1</item>
	</style>

	<!-- TRACK DETAILS LAYOUT STYLES -->

	<style name="TrackDetailsRow" parent="@style/FillWidth">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_marginTop">1dp</item>
		<item name="android:layout_marginBottom">1dp</item>
	</style>

	<style name="TrackDetailsRow_ValueUnits" parent="@style/FillWidth">
		<item name="android:paddingTop">5dp</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">#A222</item>
		<item name="android:gravity">center|bottom</item>
	</style>

	<style name="TrackDetailsRow_Value" parent="@style/FillWidth">
		<item name="android:orientation">horizontal</item>
		<item name="android:background">#A222</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="TrackDetailsRowOfRows" parent="@style/FillWidth">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginTop">1dp</item>
		<item name="android:layout_marginBottom">1dp</item>
	</style>

	<style name="TrackDetailsCell">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="TrackDetailsLeftCell" parent="@style/TrackDetailsCell">
		<item name="android:layout_marginRight">1dp</item>
	</style>

	<style name="TrackDetailsRightCell" parent="@style/TrackDetailsCell">
		<item name="android:layout_marginLeft">1dp</item>
	</style>

	<!-- LABELS -->

	<style name="AppLabel" parent="@style/WrapContent">
		<item name="android:layout_margin">1dp</item>
	</style>

	<!-- Small label for measurement units -->
	<style name="LabelUnit" parent="@style/WrapContent">
		<item name="android:textSize">13sp</item>
		<item name="android:layout_margin">1dp</item>
	</style>

	<style name="Label13" parent="@style/AppLabel">
		<item name="android:textSize">13sp</item>
	</style>

	<style name="Label17" parent="@style/AppLabel">
		<item name="android:textSize">17sp</item>
	</style>

	<style name="Label20" parent="@style/AppLabel">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="Label30" parent="@style/AppLabel">
		<item name="android:textSize">30sp</item>
	</style>

	<style name="Label40" parent="@style/AppLabel">
		<item name="android:textSize">40sp</item>
	</style>

	<style name="Label50" parent="@style/AppLabel">
		<item name="android:textSize">50sp</item>
	</style>

	<!-- HEADERS -->

	<style name="SmallHeader" parent="@style/AppLabel">
		<item name="android:textSize">13sp</item>
		<item name="android:background">#0000</item>
		<item name="android:textColor">@color/label</item>
	</style>

	<style name="SmallHeader1" parent="@style/AppLabel">
		<item name="android:textSize">16sp</item>
		<item name="android:background">#0000</item>
	</style>

	<!-- NEW STYLES -->
	
	<style name="LayoutRow" parent="@style/FillWidth">
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="LayoutRowLabel" parent="@style/LayoutRow">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textColor">@color/label</item>
	</style>

	<style name="LayoutRowColumn" parent="@style/LayoutRow">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">#A222</item>
		<item name="android:layout_marginBottom">6dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:gravity">center|bottom</item>
	</style>

	<style name="LayoutRowValue" parent="@style/WrapContent">
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingRight">2dp</item>
		<item name="android:textSize">30sp</item>
	</style>

	<style name="LayoutRowValueUnit" parent="@style/WrapContent">
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingRight">2dp</item>
		<item name="android:textSize">15sp</item>
	</style>

	<style name="LayoutRowValueSmall" parent="@style/WrapContent">
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingRight">2dp</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="Message" parent="@style/FillWidth">
		<item name="android:textSize">13sp</item>
	</style>

</resources>